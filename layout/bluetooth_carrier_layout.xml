<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bluetooth_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/bluetooth_auto_connect_dec"
        style="@style/layout_item_style"
        android:orientation="horizontal" >

        <com.landsem.setting.view.MenuTextView
            style="@style/bluetooth_textview_style"
            android:layout_weight="1"
            android:text="@string/bluetooth_autolink" />

        <Switch
            android:id="@+id/bluetooth_auto_connect"
            style="@style/switch_style" />
    </LinearLayout>

    <View style="@style/splitline_horizontal_style" />

    <LinearLayout
        android:id="@+id/phone_auto_answer_dec"
        style="@style/layout_item_style"
        android:orientation="horizontal" >

        <com.landsem.setting.view.MenuTextView
            style="@style/bluetooth_textview_style"
            android:layout_weight="1"
            android:text="@string/auto_answer_phone" />

        <Switch
            android:id="@+id/phone_auto_answer"
            style="@style/switch_style" />
    </LinearLayout>

    <View style="@style/splitline_horizontal_style" />

    <LinearLayout
        android:id="@+id/bluetooth_patten_code_dec"
        style="@style/layout_item_style"
        android:orientation="horizontal"
        android:visibility="gone" >

        <com.landsem.setting.view.MenuTextView
            style="@style/bluetooth_textview_style"
            android:layout_weight="1"
            android:text="@string/bluetooth_pair_code" />

        <com.landsem.setting.view.MenuTextView
            android:id="@+id/bluetooth_patten_code"
            style="@style/bluetooth_textview_style"
            android:layout_width="wrap_content"
            android:text="@string/bluetooth_pair_code" />
    </LinearLayout>

    <View
        style="@style/splitline_horizontal_style"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/bluetooth_name_dec"
        style="@style/layout_item_style"
        android:orientation="horizontal"
        android:visibility="gone" >

        <com.landsem.setting.view.MenuTextView
            style="@style/bluetooth_textview_style"
            android:layout_weight="1"
            android:text="@string/bluetooth_name" />

        <com.landsem.setting.view.BluetoothPhoneNameTextView
            android:id="@+id/bluetooth_name"
            style="@style/bluetooth_textview_style"
            android:layout_width="wrap_content"
            android:text="@string/bluetooth_name" />
    </LinearLayout>

    <View
        style="@style/splitline_horizontal_style"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/bluetooth_address_dec"
        style="@style/layout_item_style"
        android:orientation="horizontal"
        android:visibility="gone" >

        <com.landsem.setting.view.MenuTextView
            style="@style/bluetooth_textview_style"
            android:layout_weight="1"
            android:text="@string/bluetooth_address" />

        <com.landsem.setting.view.MenuTextView
            android:id="@+id/bluetooth_address"
            style="@style/bluetooth_textview_style"
            android:layout_width="wrap_content"
            android:text="@string/bluetooth_address" />
    </LinearLayout>

</LinearLayout>