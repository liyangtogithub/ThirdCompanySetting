<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout_item_style"
    android:layout_gravity="center_vertical" >

    <TextView
        android:id="@+id/ssid"
        style="@style/common_textview_style"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/level"
        android:clickable="false"
        android:ellipsize="none"
        android:gravity="center_vertical|left"
        android:singleLine="true" />

    <ImageView
        android:id="@+id/level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/wifi_signal_open" />

    <ImageView
        android:id="@+id/statu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="40dp"
        android:layout_toLeftOf="@id/level"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/lock_normal"
        android:visibility="gone" />

    <View
        style="@style/splitline_horizontal_style"
        android:layout_alignParentBottom="true" />

</RelativeLayout>