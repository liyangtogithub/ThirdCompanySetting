<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/singal_setting"
        style="@style/common_textview_style"
        android:layout_width="wrap_content"
        android:text="@string/singal_3g_libril" />

    <TextView
        android:id="@+id/singal_name"
        style="@style/common_textview_style"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/navi_setting"
        android:gravity="center_vertical|right" />

    <View
        android:id="@+id/singal_split"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/singal_setting"
        android:background="@color/splitline_color" />

    <ListView
        android:id="@+id/singal_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/singal_split"
        android:divider="@color/splitline_color"
        android:dividerHeight="1px" />

</RelativeLayout>