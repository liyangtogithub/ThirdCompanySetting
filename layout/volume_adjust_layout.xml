<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <com.landsem.setting.view.MenuTextView
        android:id="@+id/option_describe"
        style="@style/item_textview_style"
        android:text="@string/adas_volume" />

    <LinearLayout
        style="@style/layout_item_style"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/volume_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/volume_minus_selector" />

        <SeekBar
            android:id="@+id/volume_seek"
            android:layout_marginRight="30dp"
            style="@style/progressBarStyleHorizontal" />

        <ImageView
            android:id="@+id/volume_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/volume_add_selector" />
    </LinearLayout>

</LinearLayout>