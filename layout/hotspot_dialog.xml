<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="604dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/transparent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:background="@drawable/alertdialog_content_bg2_below"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:src="@drawable/list" />

        <TextView
            android:id="@+id/popup_dialog_hotspot_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:text="@string/str_prompt"
            android:textColor="@color/color_wifi_password_blue"
            android:textSize="42dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/alertdialog_content_bg2_bottom"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/msgView"
            android:text="@string/str_tethering_attention"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="53dp"
            android:layout_marginTop="46dp"
            android:layout_marginBottom="29dp"
            android:textColor="@color/color_white"
            android:textSize="40dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp" >

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="34dp"
                android:background="@drawable/dialog_btn_selector"
                android:onClick="onClick"
                android:text="@string/str_ok"
                android:textColor="@color/color_white"
                android:textSize="@dimen/btn_text_size" />

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/dialog_btn_selector"
                android:onClick="onClick"
                android:text="@string/str_cancel"
                android:textColor="@color/color_white"
                android:textSize="@dimen/btn_text_size" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>