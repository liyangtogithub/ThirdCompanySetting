<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:padding="3dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:padding="2dp" >

        <LinearLayout
            android:id="@+id/car_type_top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/car_type_up"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/CarTypeTitle"
                android:textColor="@color/white"
                android:textSize="@dimen/common_textsize" />

            <View
                android:layout_width="3dp"
                android:layout_height="46dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/car_type_up_separate" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/CarTypeChoice"
                android:textColor="@color/white"
                android:textSize="@dimen/common_textsize" />

            <View
                android:layout_width="3dp"
                android:layout_height="46dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/car_type_up_separate" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/CarTypeCan"
                android:textColor="@color/white"
                android:textSize="@dimen/common_textsize" />
        </LinearLayout>
        
          <RelativeLayout
            android:id="@+id/car_type_bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/car_type_up" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_car_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:text="@string/CarTypeTitle"
                    android:textColor="@color/white"
                    android:textSize="@dimen/spinner_content" />

                <View
                    android:layout_width="3dp"
                    android:layout_height="46dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/car_type_up_separate" />

                <TextView
                    android:id="@+id/tv_car_choice"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:text="@string/CarTypeChoice"
                    android:textColor="@color/white"
                    android:textSize="@dimen/spinner_content" />

                <View
                    android:layout_width="3dp"
                    android:layout_height="46dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/car_type_up_separate" />

                <TextView
                    android:id="@+id/tv_car_can"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/CarTypeCan"
                    android:textColor="@color/white"
                    android:textSize="@dimen/spinner_content" />
            </LinearLayout>

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/date_time_marginleft"
                android:src="@drawable/car_type_down_icon" />
        </RelativeLayout>
        
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/car_type_top_layout"
            android:layout_above="@id/car_type_bottom_layout"
            android:orientation="horizontal" >
           <ListView
                android:id="@+id/car_title_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:background="@color/black"
                android:listSelector="@color/transparent" >
            </ListView>
            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/car_type_list_separate" />
            <ListView
                android:id="@+id/car_choice_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:background="@color/transparent"
                android:listSelector="@color/transparent" >
            </ListView>
             <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/car_type_list_separate" />
            <ListView
                android:id="@+id/car_can_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:listSelector="@color/transparent" >
            </ListView>
        </LinearLayout>
        

      
    </RelativeLayout>

</RelativeLayout>