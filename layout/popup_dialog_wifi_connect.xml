<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="520dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/popup_dialog_wifi_inputpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="@string/str_prompt"
        android:textColor="@color/color_wifi_password_blue"
        android:textSize="36dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color" />

    <LinearLayout
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/ssid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="left"
            android:paddingLeft="15dp"
            android:paddingRight="30dp"
            android:textColor="@color/color_white"
            android:textSize="@dimen/btn_text_size" />

        <TextView
            android:id="@+id/level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="15dp"
            android:paddingRight="30dp"
            android:textColor="@color/color_white"
            android:textSize="@dimen/btn_text_size" />
        
        <TextView
            android:id="@+id/ip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="15dp"
            android:paddingRight="30dp"
            android:textColor="@color/color_white"
            android:textSize="@dimen/btn_text_size" />
        

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:padding="2dp" >

            <TextView
                android:id="@+id/btn_conn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/cancle_button_selector"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onClick"
                android:text="@string/str_connect"
                android:textColor="@color/color_white"
                android:textSize="@dimen/btn_text_size" />

            <TextView
                android:id="@+id/btn_forget"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/cancle_button_selector"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onClick"
                android:text="@string/str_forget"
                android:textColor="@color/color_white"
                android:textSize="@dimen/btn_text_size" />

            <TextView
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@drawable/cancle_button_selector"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onClick"
                android:text="@string/str_cancel"
                android:textColor="@color/color_white"
                android:textSize="@dimen/btn_text_size" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>