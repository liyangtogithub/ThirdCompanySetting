<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/upload_log_view"
        style="@style/common_textview_style"
        android:layout_width="@dimen/textbutton_width"
        android:layout_height="@dimen/textbutton_height"
        android:layout_gravity="center"
        android:background="@drawable/textbutton_bg_selector"
        android:gravity="center"
        android:text="@string/upload_log" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>