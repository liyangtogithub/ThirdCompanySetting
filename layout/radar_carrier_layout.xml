    android:layout_height="match_parent"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.landsem.setting.view.SettingItemCheckboxView
            android:id="@+id/Radar_RadarDisplaySICBV"
            style="@style/SettingItemStyle"
            android:text="@string/RadarDisplay" />

        <com.landsem.setting.view.SettingItemView
            android:id="@+id/Radar_RadarVolumeSIV"
            style="@style/SettingItemStyle"
            android:text="@string/RadarVolume" />

        <com.landsem.setting.view.SettingItemView
            android:id="@+id/Radar_RadarDistanceSIV"
            style="@style/SettingItemStyle"
            android:text="@string/RadarDistance" />
    </LinearLayout>

</ScrollView>